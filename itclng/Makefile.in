#========================================================================
# None of these assignments are substituted by configure
#========================================================================

SRC_DIR=$(srcdir)
TOP_DIR=$(SRC_DIR)
GENERIC_DIR=$(TOP_DIR)/generic
BINARIES=$(PKG_LIB_FILE) $(PKG_STUB_LIB_FILE)
DESTDIR=
PKG_DIR=$(PACKAGE_NAME)$(PACKAGE_VERSION)
